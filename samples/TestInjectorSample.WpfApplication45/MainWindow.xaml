<Window x:Class="TestInjectorSample.WpfApplication45.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
        <TextBlock x:Name="HeadingLabel" x:FieldModifier="public">Initial heading</TextBlock>
        <TextBox x:Name="HeadingTextBox" x:FieldModifier="public" />
        <Button x:Name="Go" x:FieldModifier="public" Click="Go_OnClick">Update heading</Button>
    </StackPanel>
</Window>
